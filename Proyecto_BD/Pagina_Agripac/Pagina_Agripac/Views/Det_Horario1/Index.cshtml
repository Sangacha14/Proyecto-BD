@model IEnumerable<Pagina_Agripac.Det_Horario>

@{
    ViewBag.Title = "Index";
}

<h2>Detalle de Horario</h2>
<p>
    @Html.ActionLink("Crear Registro", "Create")
</p>
<form>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label"></label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Password</label>
        <input type="password" class="form-control" id="exampleInputPassword1">
    </div>
    <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">Check me out</label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_inicial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_final)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Horario.Comprobante)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Jornada.Jornada1)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_inicial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_final)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Horario.Comprobante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Jornada.Jornada1)
            </td>
            <td>
                @Html.ActionLink("✏", "Edit", new { id = item.id_det_horario }) |
                @Html.ActionLink("👀", "Details", new { id = item.id_det_horario }) |
                @Html.ActionLink("❌", "Delete", new { id = item.id_det_horario })
            </td>
        </tr>
    }

</table>

